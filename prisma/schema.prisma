generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Course {
  id          String       @id @default(cuid())
  title       String
  description String?
  imageUrl    String?
  price       Float?
  isPublished Boolean      @default(false)
  createdAt   DateTime     @default(now())
  createdBy   String
  updatedAt   DateTime     @updatedAt
  categoryId  String?
  attachments Attachment[]
  category    Category?    @relation(fields: [categoryId], references: [id])
}

model Category {
  id      String   @id @default(cuid())
  name    String   @unique
  courses Course[]
}

model Attachment {
  id       String @id @default(cuid())
  name     String
  description String
  type attachmenttype 
  url      String
  courseId String
  course   Course @relation(fields: [courseId], references: [id])
}

enum attachmenttype{
  VIDEO
  POWERPOINT
  PDF
  IMAGE
}

model userroles {
  id      BigInt  @id @default(autoincrement())
  user_id String?
  role    approle

  @@unique([user_id, role])
}

enum approle {
  ADMIN
  USER
  TEACHER
}
